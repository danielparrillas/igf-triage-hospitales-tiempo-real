generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String?
  role     Int      @default(0)  // 0: user, 1: admin
  ingresos Ingreso[]
}

model Ingreso {
  id            Int           @id @default(autoincrement())
  paciente      String
  dui           String  
  fecha         DateTime      @default(now())
  razon         String
  urgencia      Int           // 1: Resucitaci√≥n, 2: Emergencia, 3: Urgencia, 4: Urgencia Menor, 5: Sin Urgencia
  encargadoId   Int
  encargado     User?          @relation(fields: [encargadoId], references: [id])
}