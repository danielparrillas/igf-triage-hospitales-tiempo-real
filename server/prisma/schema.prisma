generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String?
  role     Int      @default(0)  // 0: user, 1: admin
}

model Hospital {
  id       Int      @id @default(autoincrement())
  nombre     String
  direccion  String
  empleados Empleado[]
  ingresos  Ingreso[]
}

model Empleado {
  id           Int      @id @default(autoincrement())
  code         String
  hospitalId   Int
  hospital     Hospital @relation(fields: [hospitalId], references: [id])
  role         Int      @default(0)  // 2: doctor, 3: receptionist
  atenciones   Ingreso[]
}

model Ingreso {
  id            Int           @id @default(autoincrement())
  paciente      String
  dateAdmitted  DateTime      @default(now())
  razon         String
  urgencia      Int           // 1: Resucitaci√≥n, 2: Emergencia, 3: Urgencia, 4: Urgencia Menor, 5: Sin Urgencia
  hospitalId    Int
  hospital      Hospital      @relation(fields: [hospitalId], references: [id])
  empleadoId    Int?
  encargado     Empleado?     @relation(fields: [empleadoId], references: [id])
}